                        <ImageView
                            android:layout_width="@dimen/lebar"
                            android:layout_height="match_parent"
                            android:background="@drawable/list"
                            android:scaleX="0.4"
                            android:scaleY="0.5"
                            android:layout_alignParentTop="true"/>
                        <Button
