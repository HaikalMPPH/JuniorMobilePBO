                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_seluler"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:backgroundTint="#edf4ff"
                    android:layout_margin="5dp"
