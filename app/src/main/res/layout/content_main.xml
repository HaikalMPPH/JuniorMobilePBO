                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/lebar"
                            android:layout_height="90dp"
                            android:background="@drawable/circle"
                            android:scaleX="0.4"
                            android:scaleY="0.5"
                            android:layout_alignParentTop="true">
                        </ImageView>
                        <Button
