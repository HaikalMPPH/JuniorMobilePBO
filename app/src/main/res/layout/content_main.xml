                    android:layout_height="100dp"
                    android:backgroundTint="#edf4ff"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    android:layout_toRightOf="@id/card_list">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/lebar"
                            android:layout_height="match_parent"
                            android:background="@drawable/sqlite"
                            android:scaleX="0.4"
                            android:scaleY="0.5"
                            android:layout_alignParentTop="true"/>
                        <Button
